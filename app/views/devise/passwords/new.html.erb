<div class="page-header">
	<h1><%= t 'simple_form.labels.user.recovery.title' %></h1>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= render partial: "devise/shared/flash_messages", flash: flash %> 
  <%= f.input :email, :required => true, :autofocus => true %>

	<%= f.button :submit, t('simple_form.labels.user.recovery.recover'), class: 'btn-default' %>
<% end %>

<%= render "devise/shared/links" %>
