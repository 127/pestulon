<div class="page-header">
  <h1><%= t 'devise.invitations.edit.header' %></h1>
</div>

<%= simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :put, :class => 'form-horizontal'} do |f| %>
  <%= f.error_notification %>
  <%= render partial: "devise/shared/flash_messages", flash: flash %>
  <%= f.hidden_field :invitation_token %>
  <%= f.input :password, :hint => false %>
  <%= f.input :password_confirmation %>

  <%= f.button :submit, t("devise.invitations.edit.submit_button"), class: 'btn-default' %>
<% end %>
